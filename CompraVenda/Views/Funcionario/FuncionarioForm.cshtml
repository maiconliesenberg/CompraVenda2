@model CompraVenda.ViewModels.FuncionarioFormViewModel
@{
    ViewBag.Title = Model.Title;
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Save", "Funcionario"))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Funcionario.Id)
    <div class="form-group">
        @Html.LabelFor(m => m.Funcionario.Name)
        @Html.TextBoxFor(m => m.Funcionario.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Funcionario.Name)
    </div>

    <button type="submit" class="btn btn-primary">Salvar</button>
}
@section scripts
 {
    @Scripts.Render("~/bundles/jqueryval")
}