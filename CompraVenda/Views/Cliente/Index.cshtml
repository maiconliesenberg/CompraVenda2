@model CompraVenda.ViewModels.ClienteIndexViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Clientes</h2>

@if (@Model.Cliente.Count > 0)
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr><th>Id</th><th>Clientes</th></tr>
        </thead>
        <tbody>
            @foreach (var cliente in Model.Cliente)
            {   
                <tr>
                    <td>@cliente.Id</td>
                    <td>@Html.ActionLink(@cliente.Name, "Detalhes", new { cliente.Id })</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Não tem cliente ainda!</p>
}