@model CompraVenda.ViewModels.ProdutoIndexViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Produtos</h2>

@if (@Model.Produto.Count > 0)
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr><th>Customer</th></tr>
        </thead>
        <tbody>
            @foreach (var produto in Model.Produto)
            {
                <tr><td>@Html.ActionLink(@produto.Name, "Detalhes", new { produto.Id })</td></tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Não tem funcionarios ainda!</p>
}

