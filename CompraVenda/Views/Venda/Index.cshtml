@model CompraVenda.ViewModels.VendaIndexViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Vendas</h2>

@if (@Model.Venda.Count > 0)
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr><th>Id</th><th>Produto</th><th>Funcionario</th><th>Cliente</th></tr>
        </thead>
        <tbody>
            @foreach (var venda in Model.Venda)
            {
                <tr>
                    <td>@venda.Id</td>
                    <td>@Html.ActionLink(@venda.Name, "Detalhes", new { venda.Id })</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Não tem vendas ainda!</p>
}
